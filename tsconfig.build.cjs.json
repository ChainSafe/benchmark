{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./lib/cjs",
		"esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
		"module": "commonjs",

    // To build for Node 18 the lru-cache package has conflicting types
    "skipLibCheck": true,
  }
}
